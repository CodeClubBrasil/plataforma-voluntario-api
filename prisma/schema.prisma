// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id              String           @id @default(uuid())
  active          Boolean
  created_at      DateTime         @default(now())
  updated_at      DateTime?        @updatedAt
  name            String
  last_name       String
  username       String
  telephone       String[]
  email           String
  password        String
  city            String
  state           State
  neighborhood    String
  knowledges      String[]
  available_times AvailableTimes[]

  @@map("users")
}

model AvailableTimes {
  id         String    @id @default(uuid())
  active     Boolean
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt
  week_day   Weekday
  time_start DateTime
  time_end   DateTime
  user_id    String
  user       Users     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("available_times")
}

enum State {
  AC
  AL
  AP
  AM
  BA
  CE
  DF
  ES
  GO
  MA
  MT
  MS
  MG
  PA
  PB
  PR
  PE
  PI
  RJ
  RN
  RS
  RO
  RR
  SC
  SP
  SE
  TO

  @@map("state")
}

enum Weekday {
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY

  @@map("weekday")
}
