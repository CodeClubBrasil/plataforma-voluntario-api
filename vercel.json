{
    "version": 2,
    "name": "plataforma-voluntario-api",
    
    "outputDirectory": "build",
    "builds": [
        {
            "installCommand": "npm install"
        },
        {
          "src": "dist/main.js",
          "use": "@vercel/node"
        }
      ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "dist/main.js",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "PATCH",
                "OPTIONS"
            ]
        }
    ]
}