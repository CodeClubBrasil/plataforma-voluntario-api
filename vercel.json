{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["**/*.ts"] }
    }
  ],
  "routes": [
    { "src": "/swagger(.*)", "dest": "src/main.ts", "continue": true },
    { "src": "/(.*)", "dest": "src/main.ts" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
