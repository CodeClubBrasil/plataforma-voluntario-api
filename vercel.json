{
    "version": 2,
    "name": "plataforma-voluntario-api",
    "outputDirectory": "build",
    "builds": [
        {
            "src": "*.js",
            "use": "@vercel/node",
            "installCommand": "npm install",
            "buildCommand": "npm run build"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "build/main.js",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "PATCH",
                "OPTIONS"
            ]
        }
    ]
}
